source 'http://rubygems.org'

gem 'rails', '3.1.0'

gem 'nifty-generators'
gem 'rake'
gem 'activeadmin'
gem 'sass-rails'
gem "meta_search"

gem 'mysql2'
gem 'jquery-rails'

gem "rspec-rails", :group => [:test, :development]
group :test  do
  gem 'guard-rspec'
end 

group :development do
  gem "capistrano"
  gem "rvm-capistrano"
  gem "guard-livereload"
  gem "pry"
end

# Use unicorn as the web server
gem 'unicorn'


